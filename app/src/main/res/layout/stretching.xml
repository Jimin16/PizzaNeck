<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
<ScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="스트레칭 정보"
                android:textColor="#0B3B79"
                android:fontFamily="@font/jalnan"
                android:textSize="20sp"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#d7d7db">

            <VideoView
                android:id="@+id/stretching_vv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="123dp"
                android:layout_height="112dp"
                app:srcCompat="@drawable/ic_stretching_a" />

            <TextView
                android:layout_width="243dp"
                android:layout_height="112dp"
                android:background="#FFFFFF"
                android:textColor="@color/stretching_font"
                android:fontFamily="@font/malgunbd"
                android:gravity="center_vertical"
                android:text="1. 팔꿈치와 어깨를 수평으로 유지하고 엄지손가락으로 관자놀이를 눌러준다." />


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation = "horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="123dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_stretching_b" />

            <TextView
                android:layout_width="243dp"
                android:layout_height="112dp"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:textColor="@color/stretching_font"
                android:fontFamily="@font/malgunbd"
                android:text="2. 팔꿈치를 모으고 손목을 굽히지 않은 채  엄지손가락으로 관자놀이를 누른다." />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation = "horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="123dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_stretching_c" />

            <TextView
                android:layout_width="243dp"
                android:layout_height="112dp"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:textColor="@color/stretching_font"
                android:fontFamily="@font/malgunbd"
                android:text="3. 두 손을 깍지 끼고 상체를 숙이지 않은 채 등 뒤로 팔을 올린다." />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation = "horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="123dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_stretching_d" />

            <TextView
                android:layout_width="243dp"
                android:layout_height="112dp"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:textColor="@color/stretching_font"
                android:fontFamily="@font/malgunbd"
                android:text="4. 두 손을 포개어 이마에 올린 뒤 이마를 앞으로 내민다." />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation = "horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="123dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_stretching_e" />

            <TextView
                android:layout_width="243dp"
                android:layout_height="112dp"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:textColor="@color/stretching_font"
                android:fontFamily="@font/malgunbd"
                android:text="5. 두 손을 뒷머리에 올린 뒤 뒷머리를 뒤로 민다." />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="123dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_stretching_f" />

            <TextView
                android:layout_width="243dp"
                android:layout_height="112dp"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:textColor="@color/stretching_font"
                android:fontFamily="@font/malgunbd"
                android:text="6. 한쪽 팔을 반대편 옆머리에 올린 뒤 반대편으로 머리를 당긴다." />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stretching_font">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation = "vertical">

            <Button
                android:id="@+id/stretching_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#093A7A"
                android:text="캘린더에 체크하러가기"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navi_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
