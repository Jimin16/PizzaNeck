<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="설정"
            android:textColor="#0B3B79"
            android:fontFamily="@font/jalnan"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="101dp"
            android:layout_height="63dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:text="알림 설정"
            android:textColor="@color/main_color"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="122dp"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:buttonTint="@color/your_color"
                android:fontFamily="@font/typo_ssangmundong"
                android:text="OFF"
                android:textColor="@color/your_color"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_marginLeft="70px"
                android:buttonTint="@color/your_color"
                android:fontFamily="@font/typo_ssangmundong"
                android:text="ON"
                android:textColor="@color/your_color"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="111dp"
            android:layout_height="57dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:text="알림음 설정"
            android:textColor="@color/main_color"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:background="@drawable/spinner_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:entries="@array/sound"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="318dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/jalnan"
        android:text="테마 색상 설정"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button10"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:backgroundTint="#ffa07a" />

        <Button
            android:id="@+id/button11"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#f08080"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#ff6347"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#ffdab9"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#ffa500"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button15"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:backgroundTint="#90ee90"/>

        <Button
            android:id="@+id/button16"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#3cb371"/>

        <Button
            android:id="@+id/button17"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#006400"/>

        <Button
            android:id="@+id/button18"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#00ffff"/>

        <Button
            android:id="@+id/button19"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#00bfff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button20"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:backgroundTint="#7b68ee"/>

        <Button
            android:id="@+id/button21"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#483d8b"/>

        <Button
            android:id="@+id/button22"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#0000ff"/>

        <Button
            android:id="@+id/button23"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#da70d6"/>

        <Button
            android:id="@+id/button24"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:backgroundTint="#8a2be2"/>
    </LinearLayout>

</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navi_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
